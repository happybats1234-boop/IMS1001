import React, { useState, useEffect, useRef } from 'react';
import { base44 } from "@/api/base44Client";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { 
  Bot, Send, Upload, FileSpreadsheet, Trash2, Package, Users, 
  ShoppingCart, Loader2, CheckCircle, AlertTriangle, Sparkles,
  ClipboardPaste, Calendar, Database
} from "lucide-react";
import { toast } from "sonner";
import ReactMarkdown from 'react-markdown';

export default function AIAssistant() {
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState('');
  const [pasteData, setPasteData] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [conversationId, setConversationId] = useState(null);
  const messagesEndRef = useRef(null);
  const fileInputRef = useRef(null);

  useEffect(() => {
    initConversation();
  }, []);

  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  useEffect(() => {
    if (!conversationId) return;
    const unsubscribe = base44.agents.subscribeToConversation(conversationId, (data) => {
      setMessages(data.messages || []);
    });
    return () => unsubscribe();
  }, [conversationId]);

  const initConversation = async () => {
    try {
      const conv = await base44.agents.createConversation({
        agent_name: 'warehouse_assistant',
        metadata: { name: 'Warehouse Assistant Session' }
      });
      setConversationId(conv.id);
      
      // Set welcome message locally first for instant UI
      const welcomeMsg = {
        role: 'assistant',
        content: `ðŸ‘‹ **Welcome to the Warehouse AI Assistant!**

I can help you with:

**ðŸ“¥ Import Data**
- Upload CSV files or paste spreadsheet data
- I'll automatically map columns and create records

**ðŸ—‘ï¸ Bulk Operations**
- "Delete all products with 0 stock"
- "Delete orders before January 2024"
- "Remove all cancelled shipments"

**ðŸ“¦ Inventory Management**
- "Show me low stock items"
- "Set reorder point to 20 for all electronics"
- "Update stock for SKU-123 to 500"

**ðŸ“Š Reports & Queries**
- "How many orders this month?"
- "List customers with no orders"
- "Show overdue purchase orders"

**How can I help you today?**`
      };
      
      setMessages([welcomeMsg]);
    } catch (e) {
      console.error('Failed to initialize assistant:', e);
      toast.error('Failed to initialize assistant');
      // Show fallback UI
      setMessages([{
        role: 'assistant',
        content: 'ðŸ‘‹ AI Assistant is ready. How can I help you today?'
      }]);
    }
  };

  const sendMessage = async (content) => {
    if (!content.trim() || !conversationId || isLoading) return;
    
    setIsLoading(true);
    setInput('');
    setPasteData('');
    
    try {
      const conv = await base44.agents.getConversation(conversationId);
      await base44.agents.addMessage(conv, { role: 'user', content });
    } catch (e) {
      toast.error('Failed to send message');
    } finally {
      setIsLoading(false);
    }
  };

  const handleFileUpload = async (e) => {
    const file = e.target.files?.[0];
    if (!file) return;

    setIsLoading(true);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });
      
      const result = await base44.integrations.Core.ExtractDataFromUploadedFile({
        file_url,
        json_schema: {
          type: "array",
          items: {
            type: "object",
            additionalProperties: true
          }
        }
      });

      if (result.status === 'success' && result.output) {
        const dataPreview = JSON.stringify(result.output.slice(0, 3), null, 2);
        const message = `I've uploaded a CSV file "${file.name}" with ${result.output.length} rows.

Here's a preview of the data:
\`\`\`json
${dataPreview}
\`\`\`

Please analyze this data and import it into the appropriate entity (Products, Customers, Suppliers, or Orders). Map the columns intelligently and create the records.`;
        
        await sendMessage(message);
      } else {
        toast.error('Failed to parse file');
      }
    } catch (e) {
      toast.error('Failed to upload file');
    } finally {
      setIsLoading(false);
      if (fileInputRef.current) fileInputRef.current.value = '';
    }
  };

  const handlePasteData = () => {
    if (!pasteData.trim()) return;
    
    const message = `I'm pasting the following data. Please analyze it and import it into the appropriate entity:

\`\`\`
${pasteData}
\`\`\`

Map the columns intelligently and create/update the records. Tell me what you did.`;
    
    sendMessage(message);
  };

  const quickActions = [
    { label: 'Show low stock', prompt: 'Show me all products with stock below their reorder point', icon: Package },
    { label: 'Delete old orders', prompt: 'Find and list orders older than 6 months that are cancelled, then delete them', icon: Trash2 },
    { label: 'Inventory summary', prompt: 'Give me a summary of total inventory value, product count, and low stock alerts', icon: Database },
    { label: 'This month orders', prompt: 'How many orders were created this month and what is the total revenue?', icon: Calendar },
  ];

  return (
    <div className="p-6 bg-slate-100 min-h-screen">
      <div className="max-w-4xl mx-auto space-y-6">
        {/* Header */}
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-slate-900 rounded-lg flex items-center justify-center">
              <Bot className="w-5 h-5 text-white" />
            </div>
            <div>
              <h1 className="text-2xl font-bold text-slate-900">AI Assistant</h1>
              <p className="text-sm text-slate-500">Import, bulk operations & smart queries</p>
            </div>
          </div>
          <Badge className="bg-emerald-100 text-emerald-700">
            <Sparkles className="w-3 h-3 mr-1" />
            Powered by AI
          </Badge>
        </div>

        {/* Quick Actions */}
        <div className="flex flex-wrap gap-2">
          {quickActions.map((action, i) => {
            const Icon = action.icon;
            return (
              <Button
                key={i}
                variant="outline"
                size="sm"
                onClick={() => sendMessage(action.prompt)}
                disabled={isLoading}
                className="text-xs"
              >
                <Icon className="w-3 h-3 mr-1" />
                {action.label}
              </Button>
            );
          })}
        </div>

        {/* Chat Area */}
        <Card className="border-0 shadow-sm">
          <CardContent className="p-0">
            {/* Messages */}
            <div className="h-96 overflow-y-auto p-4 space-y-4">
              {messages.map((msg, i) => (
                <div key={i} className={`flex gap-3 ${msg.role === 'user' ? 'flex-row-reverse' : ''}`}>
                  <div className={`w-8 h-8 rounded-full flex items-center justify-center shrink-0 ${
                    msg.role === 'user' ? 'bg-slate-700' : 'bg-slate-900'
                  }`}>
                    {msg.role === 'user' 
                      ? <Users className="w-4 h-4 text-white" />
                      : <Bot className="w-4 h-4 text-white" />
                    }
                  </div>
                  <div className={`max-w-[80%] rounded-lg px-4 py-3 ${
                    msg.role === 'user' ? 'bg-slate-700 text-white' : 'bg-white border'
                  }`}>
                    <ReactMarkdown className="prose prose-sm max-w-none text-sm">
                      {msg.content}
                    </ReactMarkdown>
                    {msg.tool_calls?.length > 0 && (
                      <div className="mt-2 space-y-1">
                        {msg.tool_calls.map((tc, j) => (
                          <div key={j} className="flex items-center gap-2 text-xs text-slate-500">
                            {tc.status === 'completed' ? (
                              <CheckCircle className="w-3 h-3 text-emerald-500" />
                            ) : tc.status === 'running' ? (
                              <Loader2 className="w-3 h-3 animate-spin" />
                            ) : (
                              <AlertTriangle className="w-3 h-3 text-amber-500" />
                            )}
                            <span>{tc.name}</span>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              ))}
              {isLoading && (
                <div className="flex gap-3">
                  <div className="w-8 h-8 rounded-full bg-slate-900 flex items-center justify-center">
                    <Bot className="w-4 h-4 text-white" />
                  </div>
                  <div className="bg-white border rounded-lg px-4 py-3">
                    <Loader2 className="w-4 h-4 animate-spin text-slate-400" />
                  </div>
                </div>
              )}
              <div ref={messagesEndRef} />
            </div>

            {/* Input Area */}
            <div className="border-t p-4 space-y-3">
              <Tabs defaultValue="chat" className="w-full">
                <TabsList className="mb-3">
                  <TabsTrigger value="chat">Chat</TabsTrigger>
                  <TabsTrigger value="paste">Paste Data</TabsTrigger>
                  <TabsTrigger value="upload">Upload CSV</TabsTrigger>
                </TabsList>

                <TabsContent value="chat">
                  <div className="flex gap-2">
                    <Input
                      value={input}
                      onChange={(e) => setInput(e.target.value)}
                      onKeyPress={(e) => e.key === 'Enter' && sendMessage(input)}
                      placeholder="Ask anything or give commands..."
                      disabled={isLoading}
                    />
                    <Button 
                      onClick={() => sendMessage(input)} 
                      disabled={!input.trim() || isLoading}
                      className="bg-slate-900 hover:bg-slate-800"
                    >
                      <Send className="w-4 h-4" />
                    </Button>
                  </div>
                </TabsContent>

                <TabsContent value="paste">
                  <div className="space-y-2">
                    <Textarea
                      value={pasteData}
                      onChange={(e) => setPasteData(e.target.value)}
                      placeholder="Paste your spreadsheet data here (CSV, tab-separated, etc.)..."
                      rows={4}
                      className="font-mono text-sm"
                    />
                    <Button 
                      onClick={handlePasteData}
                      disabled={!pasteData.trim() || isLoading}
                      className="w-full bg-slate-900 hover:bg-slate-800"
                    >
                      <ClipboardPaste className="w-4 h-4 mr-2" />
                      Process Pasted Data
                    </Button>
                  </div>
                </TabsContent>

                <TabsContent value="upload">
                  <div className="space-y-2">
                    <input
                      ref={fileInputRef}
                      type="file"
                      accept=".csv,.xlsx,.xls"
                      onChange={handleFileUpload}
                      className="hidden"
                    />
                    <Button
                      variant="outline"
                      className="w-full h-24 border-dashed"
                      onClick={() => fileInputRef.current?.click()}
                      disabled={isLoading}
                    >
                      <div className="flex flex-col items-center gap-2">
                        <FileSpreadsheet className="w-8 h-8 text-slate-400" />
                        <span className="text-sm text-slate-600">
                          Click to upload CSV or Excel file
                        </span>
                      </div>
                    </Button>
                  </div>
                </TabsContent>
              </Tabs>
            </div>
          </CardContent>
        </Card>

        {/* Help Text */}
        <Card className="border-0 shadow-sm">
          <CardContent className="p-4">
            <h3 className="font-semibold text-slate-900 mb-2">Example Commands</h3>
            <div className="grid md:grid-cols-2 gap-2 text-sm text-slate-600">
              <div>"Delete all products where category is 'Other'"</div>
              <div>"Import this data as customers"</div>
              <div>"Update all orders from last week to shipped"</div>
              <div>"Show products created before 2024"</div>
              <div>"Mass delete suppliers with no products"</div>
              <div>"Set stock to 0 for discontinued items"</div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
